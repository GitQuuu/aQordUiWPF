<Window x:Class="aQordUiWPF.View.CarpenterList.CarpenterList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aQordUiWPF.View.CarpenterList"
        mc:Ignorable="d"
        Title="CarpenterList" Height="450" Width="800">
    <Grid x:Name="GridForDataGrid" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="CraftsmenGrid" AlternatingRowBackground="White" CanUserAddRows="False"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"></DataGridTextColumn>
                <DataGridTextColumn Header="Fornavn"></DataGridTextColumn>
                <DataGridTextColumn Header="Efternavn"></DataGridTextColumn>
                <DataGridTextColumn Header="Stilling"></DataGridTextColumn>
                <DataGridTextColumn Header="Løn i timen"></DataGridTextColumn>
                <DataGridTextColumn Header="Ugentlig arbejdstid"></DataGridTextColumn>


            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
